@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-light">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6 col-sm-12">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>                
                <div class="form-group">
                    <label asp-for="Input.Nickname" class="control-label text-light"></label>
                    <input asp-for="Input.Nickname" class="form-control" placeholder="Nickname" />
                    <span asp-validation-for="Input.Nickname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class=" text-light"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group text-light">
                    <div class="checkbox">
                        <label class="text-light" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Aanmelden</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" class="text-light" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" class="text-light" asp-route-returnUrl="@Model.ReturnUrl">Registreer als een nieuwe gebruiker</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
