@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<h1 class="text-light mb-3 text-center">Registreer</h1>
<hr/>

<div class="container-fluid mb-5 mt-5">
    <div class="row">
    <div class="col-md-12 col-sm-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-light">Maak een nieuwe account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nickname" class="control-label custom-text-color"></label>
                <input asp-for="Input.Nickname" class="form-control" placeholder="Nickname" />
                <span asp-validation-for="Input.Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email" class="control-label custom-text-color"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="E-mailadres" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="control-label custom-text-color"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Wachtwoord" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label custom-text-color"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Herhaal wachtwoord" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning">Registreer</button>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
