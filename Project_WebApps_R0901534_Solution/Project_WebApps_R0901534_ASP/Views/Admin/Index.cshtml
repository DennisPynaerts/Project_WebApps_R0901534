@model Project_WebApps_R0901534_ASP.ViewModels.GebruikersListViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Gebruikers";
}

<h1 class="custom-text-color text-center mx-3">Overzicht gebruikers</h1>

<button class="btn btn-warning"><a asp-action="CreateGebruiker">Maak nieuwe gebruiker</a></button>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <table>                
                <tbody @foreach (var gebruiker in Model.Gebruikers) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => gebruiker.Id)</td>
                        <td>@Html.DisplayFor(modelItem => gebruiker.Nickname)</td>
                        <td><button class="btn btn-warning"><a asp-action="DetailsGebruiker">Details</a></button></td>
                        <td><button class="btn btn-warning"><a asp-action="VerwijderGebruiker">Verwijder</a></button></td>
                     </tr>
                }
                >
                </tbody>
            </table>
        </div>
    </div>
</div>
