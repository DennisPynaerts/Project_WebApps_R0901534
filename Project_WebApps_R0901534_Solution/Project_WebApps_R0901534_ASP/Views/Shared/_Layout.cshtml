<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Forza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container-fluid mx-0 px-0">
                <div class="row">
                    <div class="col-md-12">
                        <img src="~/Banner/forzaBanner.jpg" id="FozaBanner" alt="Banner Forza">
                    </div>
                </div>
            </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom nav-item-bg border-bottom">            
            <div class="container-fluid">
                <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarCustom">
                    <span class="text-light">MENU</span>
                </button>
                <div class="navbar-collapse collapse" id="navbarCustom">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav">
                        <li class="nav-item mx-5">
                            <a class="nav-link custom-text-color nav-item-bg" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-5">
                            <a class="nav-link  custom-text-color nav-item-bg" asp-controller="Leaderboard" asp-action="Index">Leaderboard</a>
                        </li>
                        <li class="nav-item mx-5">
                            <a class="nav-link custom-text-color nav-item-bg" asp-controller="OverMij" asp-action="Index">Over Mij</a>
                        </li>
                        <li class="nav-item dropdown mx-5">
                            <a class="nav-link dropdown-toggle  custom-text-color" href="#" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Admin </a>
                            <div class="dropdown-menu nav-item-bg" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item custom-text-color nav-item-bg" asp-controller="Admin" asp-action="Index">Gebruikers</a>
                                <a class="dropdown-item custom-text-color nav-item-bg" asp-controller="Admin" asp-action="AdminOverMij">Over Mij</a>
                                <a class="dropdown-item  custom-text-color nav-item-bg" asp-controller="Admin" asp-action="Circuit">Circuits</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container mb-3 col-md-12">
                <p class="mb-0 custom-text-color d-flex flex-wrap text-center">&copy; 2022, Dennis Pynaerts</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
