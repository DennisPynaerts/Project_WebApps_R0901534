@model Project_WebApps_R0901534_ASP.ViewModels.CircuitListViewModel
@{
    ViewData["Title"] = "Circuits - ";
}

<div class="row mt-5 mb-5">
    <div class="col-md-4 col-sm-12">        
        <div class="card border border-light rounded" style="width: 18rem;">
            <img src="~/images/COTA.jpg" class="card-img-top" alt="img_COTA">
            <div class="card-body bg-warning text-light text-center border border-top-1 border-light">
                <a class="btn btn-warning mx-auto mt-2 border border-light rounded text-light" type="button" asp-controller="Leaderboard" asp-action="Detail">COTA</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-12">
        <div class="card border border-light rounded" style="width: 18rem;">
            <img src="~/images/Daytona.jpg" class="card-img-top" alt="img_Daytona">
            <div class="card-body bg-warning text-light text-center border border-top-1 border-light">
                <a class="btn btn-warning mx-auto mt-2 border border-light rounded text-light" type="button" asp-controller="Leaderboard" asp-action="Detail">Daytona</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-12">
        <div class="card border border-light rounded" style="width: 18rem;">
            <img src="~/images/Hockenheim.jpg" class="card-img-top" alt="img_Hockenheim">
            <div class="card-body bg-warning text-light text-center border border-top-1 border-light">
                <a class="btn btn-warning mx-auto mt-2 border border-light rounded text-light" type="button" asp-controller="Leaderboard" asp-action="Detail">Hockenheim</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5 mb-5">
        @foreach (var circuit in Model.Circuits) {
        <div class="col-md-4 col-sm-12 mb-4">
            <div class="card border border-light rounded" style="width: 18rem;">
                <img src="~/images/COTA.jpg" class="card-img-top" alt="@circuit.Naam">
                <div class="card-body bg-warning text-light text-center border border-top-1 border-light">
                    <a class="btn btn-warning mx-auto mt-2 border border-light rounded text-light" type="button" asp-route-id="@circuit.CircuitId" asp-controller="Leaderboard" asp-action="Detail">@circuit.Naam</a>
                </div>
            </div>
        </div>
        }
</div>